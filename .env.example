
# Database connection string
DATABASE_URL=<postgresql://user:password@localhost:5432/langroute?schema=public>

# PostgreSQL credentials (used for local development or Docker)
POSTGRES_USER=<your_postgres_user>
POSTGRES_PASSWORD=<your_postgres_password>
POSTGRES_DB=<your_database_name>

# Enable debug logs (true/false)
DEBUG_LOGS=<true|false>

# NextAuth secret (generate with `openssl rand -base64 32`)
AUTH_SECRET=<your_nextauth_secret>
# Base URL for NextAuth (e.g., http://localhost:3000)
AUTH_URL=<http://localhost:3000>

# OAuth credentials (leave blank if not used)
GOOGLE_CLIENT_ID=<your_google_client_id>
GOOGLE_CLIENT_SECRET=<your_google_client_secret>

# Redis connection string (optional, if using Redis)
REDIS_URL=<redis://localhost:6379>
